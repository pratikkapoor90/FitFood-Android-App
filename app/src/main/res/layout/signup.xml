<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tb1"
        layout= "@layout/toolbar" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp">
        <EditText
            android:id="@+id/uName_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="First Name"
            />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:id="@+id/textInputLayout">

        <EditText
            android:id="@+id/uLName_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Last Name" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:id="@+id/textInputLayout3">
        <EditText
            android:id="@+id/uAge_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Age" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/uGender"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayout3"
        android:layout_marginTop="8dp"
        android:text=" Gender"
        android:textSize="18sp" />

    <RadioButton
        android:id="@+id/uMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/uGender"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="6dp"
        android:text="Male" />

    <RadioButton
        android:id="@+id/uFMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/uMale"
        android:layout_alignBottom="@+id/uMale"
        android:layout_marginStart="73dp"
        android:layout_toEndOf="@+id/uMale"
        android:text="Female" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="320dp">
        <EditText
            android:id="@+id/uHeight_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Height (In CM)"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:id="@+id/textInputLayout4">
        <EditText
            android:id="@+id/uWeight_value"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Weight(in KG)"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textInputLayout4"
        android:layout_marginTop="14dp"
        android:text="Set Goal"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner5"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/saveButton"
        android:layout_alignTop="@+id/textView13" />

    <Button
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Save Information"
        android:textSize="22dp"
        android:textStyle="bold"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <include
        android:id="@+id/tb1"
        layout= "@layout/toolbar" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tb1"
        android:layout_marginTop="28dp"
        android:text="FitFood"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="350dp"
        android:layout_height="50sp"
        android:layout_below="@+id/textView25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:background="@drawable/editable_textview"
        android:foregroundTint="@color/colorBlack"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:text="Email Id"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="350dp"
        android:layout_height="50sp"
        android:layout_alignEnd="@+id/textView30"
        android:layout_below="@+id/textView30"
        android:layout_marginTop="24dp"
        android:hint="Password"
        android:textSize="20dp"
        android:gravity="center"
        android:background="@drawable/editable_textview"
        android:layout_gravity="center"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/button6"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView31"
        android:layout_marginLeft="27dp"
        android:layout_below="@+id/textView31"
        android:layout_marginTop="24dp"
        android:background="@drawable/editable_button"
        android:text="Log In"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/button6"
        android:layout_below="@+id/button6"
        android:layout_marginStart="44dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/editable_button"
        android:text="Email" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_marginStart="33dp"
        android:layout_toEndOf="@+id/button5"
        android:background="@drawable/editable_button"
        android:text="Gmail" />

</RelativeLayout>